{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@bds/components": ["./brik-bds/components"],
      "@bds/components/*": ["./brik-bds/components/*"],
      "@bds/tokens": ["./brik-bds/tokens"],
      "@bds/tokens/*": ["./brik-bds/tokens/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "brik-bds/**/*.ts",
    "brik-bds/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "brik-bds/node_modules",
    "brik-bds/**/*.stories.ts",
    "brik-bds/**/*.stories.tsx",
    "brik-bds/.storybook"
  ]
}
